<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_background_paper"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/paper_my_page"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_comment_my_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="좋은 글을 사랑하고 기억하고 싶은,\n진입니다 :)"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_background_paper"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_user_sejin"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginEnd="70dp"
                app:layout_constraintBottom_toTopOf="@id/tv_user_sejin_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_user_jimin"
                app:layout_constraintTop_toBottomOf="@+id/tv_comment_my_page"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_user_sejin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="세진"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/iv_user_sejin"
                app:layout_constraintStart_toStartOf="@id/iv_user_sejin"
                app:layout_constraintTop_toBottomOf="@id/iv_background_paper" />

            <View
                app:layout_constraintStart_toEndOf="@id/tv_user_sejin_name"
                app:layout_constraintEnd_toStartOf="@id/tv_user_jimin_name"
                app:layout_constraintTop_toBottomOf="@id/iv_background_paper"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@android:color/darker_gray" />



            <ImageView
                android:id="@+id/iv_user_jimin"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_marginStart="70dp"
                app:layout_constraintBottom_toTopOf="@id/tv_user_jimin_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_user_sejin"
                app:layout_constraintTop_toBottomOf="@+id/tv_comment_my_page"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_user_jimin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="지민"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/iv_user_jimin"
                app:layout_constraintStart_toStartOf="@id/iv_user_jimin"
                app:layout_constraintTop_toBottomOf="@id/iv_background_paper" />


        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>