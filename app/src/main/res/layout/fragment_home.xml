<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentHome"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cafe24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="26dp"
        android:textSize="18sp"
        android:text="카페24 써라운드에어"
        android:fontFamily="@font/cafe_24_surround_air"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_arita"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/tv_cafe24"
        app:layout_constraintEnd_toStartOf="@+id/tv_mapo"
        app:layout_constraintTop_toTopOf="@id/tv_cafe24"
        android:text="아리따부리"
        android:fontFamily="@font/arita_buri"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mapo"
        app:layout_constraintTop_toTopOf="@id/tv_cafe24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="26dp"
        android:textSize="18sp"
        android:fontFamily="@font/mapo_flower_island"
        android:text="마포꽃섬"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_work_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="13dp"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_cafe24">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/glee_theme_gradation"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/tv_work_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:text="별 헤는 밤_윤동주"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="12dp"
                    android:text="468자"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ic_people"
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_people"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_work_title" />

                <TextView
                    android:textColor="#50FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="1명의 사용자가 이 작품을 선택했습니다."
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/ic_people"
                    app:layout_constraintTop_toBottomOf="@+id/tv_work_title" />


            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:fontFamily="@font/cafe_24_surround_air"
                android:layout_marginTop="50dp"
                android:lineSpacingExtra="20dp"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/work_example"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:background="@drawable/btn_new_transcription"
        android:gravity="center"
        android:textSize="16sp"
        android:text="새 필사 만들기"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_work_preview"
        android:layout_width="140dp"
        android:layout_height="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>